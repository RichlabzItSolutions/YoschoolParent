<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp">

        <LinearLayout
            android:id="@+id/main_layout_fee_history"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/terms_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Term Type"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/fee_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tution Fee"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:layout_weight="1"
                android:text=""
                android:gravity="center_vertical"
                android:id="@+id/price_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/paid_amount_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/main_layout_fee_history"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/payment_mode_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/main_layout_fee_history"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>
</layout>