<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_color_code"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/top_logo"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/ic_otp_icon" />


        <TextView
            android:id="@+id/text_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Resend Otp"
            android:layout_margin="@dimen/_8sdp"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/title_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_logo"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="Verification Code"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/verification_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_verification_code"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30sdp"
            android:text="Please type the verification code sent \n to +91 8897873829"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verification_message"
            android:gravity="center"
            android:orientation="vertical">


            <me.philio.pinentry.PinEntryView
                android:id="@+id/pin_enter_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@color/colorPrimary"
                app:digitTextColor="@color/black"
                app:mask=""
                app:numDigits="4"
                app:digitTextSize="9dp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:pinAccentColor="@color/colorPrimary"
                app:pinInputType="number"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/submit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUBMIT"
                    android:background="@drawable/button_back"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal"
                    android:textSize="@dimen/_20sdp"/>

            </LinearLayout>




            <com.mukesh.OtpView
                android:visibility="gone"
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:itemBackground="@color/white"
                android:textColor="@android:color/black"
                app:itemCount="4"
                app:lineColor="@color/colorPrimary"
                app:viewType="line"
                />

        </LinearLayout>





        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_otp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/verification_message"
            android:layout_margin="@dimen/_8sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editTextone"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/password_bg"
                android:gravity="center"
                android:maxLength="1"
                android:nextFocusRight="@+id/editText_two"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp">

            </TextView>

            <TextView
                android:id="@+id/editText_two"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/password_bg"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/editTextthree"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/password_bg"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/editTextfour"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:background="@drawable/password_bg"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/number_opions_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layout_otp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/layout_otp"
            android:layout_below="@+id/layout_otp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:padding="@dimen/_8sdp" />

    </RelativeLayout>
</layout>